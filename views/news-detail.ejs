<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Panel</title>

<style>
body{
  margin:0;
  font-family:Arial, sans-serif;
  background:#f4f4f4;
}

/* HEADER */
.header{
  background:linear-gradient(90deg,#c40000,#ff0000);
  color:white;
  text-align:center;
  padding:18px;
}

/* CONTAINER */
.container{
  max-width:1000px;
  margin:auto;
  padding:20px;
}

/* FORM */
.form-box{
  background:white;
  padding:20px;
  border-radius:10px;
  box-shadow:0 4px 15px rgba(0,0,0,0.08);
  margin-bottom:30px;
}

.form-box input,
.form-box textarea,
.form-box select{
  width:100%;
  padding:10px;
  margin-bottom:12px;
  border-radius:6px;
  border:1px solid #ccc;
  font-size:14px;
}

.form-box button{
  padding:10px 16px;
  background:red;
  color:white;
  border:none;
  border-radius:6px;
  cursor:pointer;
}

/* NEWS LIST */
.news-list{
  background:white;
  padding:20px;
  border-radius:10px;
  box-shadow:0 4px 15px rgba(0,0,0,0.08);
}

.news-item{
  border-bottom:1px solid #eee;
  padding:12px 0;
  display:flex;
  justify-content:space-between;
  align-items:center;
}

.news-item:last-child{
  border-bottom:none;
}

.news-info{
  max-width:75%;
}

.news-title{
  font-weight:bold;
  margin-bottom:5px;
}

.meta{
  font-size:13px;
  color:#666;
}

.delete-btn{
  background:#c40000;
  color:white;
  border:none;
  padding:6px 12px;
  border-radius:5px;
  cursor:pointer;
}

.breaking-badge{
  background:red;
  color:white;
  padding:2px 6px;
  font-size:11px;
  border-radius:4px;
  margin-left:5px;
}

/* MOBILE */
@media(max-width:600px){
  .news-item{
    flex-direction:column;
    align-items:flex-start;
  }
  .delete-btn{
    margin-top:8px;
  }
}
</style>
</head>
<body>

<div class="header">
  <h2>Admin Panel - ‡§ú‡§ø‡§≤‡§æ ‡§Ö‡§™‡§°‡•á‡§ü</h2>
</div>

<div class="container">

  <!-- ADD NEWS FORM -->
  <div class="form-box">
    <h3>Add New News</h3>

    <form method="POST" action="/admin/add">
      <input name="title" placeholder="News Title" required>

      <textarea name="content" placeholder="Full News Content" rows="5" required></textarea>

      <select name="category" required>
        <option value="">Select Category</option>
        <option>Local</option>
        <option>Sports</option>
        <option>Business</option>
        <option>Politics</option>
      </select>

      <input name="image" placeholder="Image URL">

      <input name="location" placeholder="Location">

      <label>
        <input type="checkbox" name="isBreaking">
        Mark as Breaking News
      </label>
      <br><br>

      <button type="submit">Publish News</button>
    </form>
  </div>

  <!-- NEWS LIST -->
  <div class="news-list">
    <h3>All News</h3>

    <% if(allNews.length === 0){ %>
      <p>No news available.</p>
    <% } %>

    <% allNews.forEach(item => { %>
      <div class="news-item">

        <div class="news-info">
          <div class="news-title">
            <%= item.title %>

            <% if(item.isBreaking){ %>
              <span class="breaking-badge">BREAKING</span>
            <% } %>
          </div>

          <div class="meta">
            üìÇ <%= item.category %> |
            üìç <%= item.location || "Location" %> |
            üëÅ <%= item.views %> views |
            üóì <%= item.createdAt.toLocaleDateString("en-IN") %>
          </div>
        </div>

        <form method="POST" action="/admin/delete/<%= item._id %>">
          <button class="delete-btn">Delete</button>
        </form>

      </div>
    <% }) %>

  </div>

</div>

</body>
</html>