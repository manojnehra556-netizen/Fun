<style>
body{
  margin:0;
  font-family: 'Segoe UI', Arial;
  background:#f4f4f4;
}

/* HEADER */
.header{
  background:linear-gradient(90deg,#c40000,#ff0000);
  color:white;
  padding:18px;
  text-align:center;
}

/* CONTAINER */
.container{
  max-width:900px;
  margin:20px auto;
  padding:15px;
}

/* CARD */
.card{
  background:white;
  padding:20px;
  border-radius:10px;
  box-shadow:0 5px 20px rgba(0,0,0,0.08);
}

/* BREAKING BADGE */
.badge{
  display:inline-block;
  background:red;
  color:white;
  padding:4px 10px;
  font-size:12px;
  border-radius:20px;
  margin-bottom:10px;
  animation:blink 1s infinite;
}
@keyframes blink{
  50%{opacity:0.6;}
}

/* TITLE */
.title{
  font-size:26px;
  margin:10px 0;
  line-height:1.4;
}

/* META */
.meta{
  font-size:14px;
  color:#777;
  margin-bottom:15px;
  border-bottom:1px solid #eee;
  padding-bottom:10px;
}

/* IMAGE */
.hero-img{
  width:100%;
  border-radius:8px;
  margin:15px 0;
}

/* CONTENT */
.content{
  font-size:18px;
  line-height:1.8;
  color:#333;
}

/* VIEW COUNTER */
.views{
  margin-top:15px;
  font-size:14px;
  color:#555;
}

/* SHARE */
.share{
  margin-top:15px;
}
.share a{
  text-decoration:none;
  padding:8px 14px;
  border-radius:6px;
  margin-right:8px;
  color:white;
  font-size:14px;
}
.whatsapp{background:#25D366;}
.facebook{background:#1877F2;}

/* BACK */
.back{
  display:inline-block;
  margin-top:20px;
  background:red;
  color:white;
  padding:8px 14px;
  text-decoration:none;
  border-radius:6px;
}

/* MOBILE */
@media(max-width:600px){
  .title{font-size:20px;}
  .content{font-size:16px;}
}
</style>
</head>
