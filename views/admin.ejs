<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Admin</title>
</head>
<body>

<h1>Add News</h1>

<form action="/add-news" method="POST">
<input name="title" placeholder="Title" required><br><br>
<textarea name="content" placeholder="Content" required></textarea><br><br>
<input name="image" placeholder="Image URL"><br><br>

<select name="category">
<option value="Local">Local</option>
<option value="Sports">Sports</option>
<option value="Business">Business</option>
<option value="Politics">Politics</option>
<option value="Entertainment">Entertainment</option>
<option value="Technology">Technology</option>
</select><br><br>

<label><input type="checkbox" name="breaking"> Breaking</label><br><br>

<button type="submit">Publish</button>
</form>

<h2>Existing News</h2>

<% news.forEach(item => { %>
<div>
<%= item.title %>
<form action="/delete/<%= item._id %>" method="POST">
<button>Delete</button>
</form>
</div>
<% }) %>

</body>
</html>