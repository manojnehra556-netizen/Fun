<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Admin Panel - Jila Update</title>

<style>
body{
  margin:0;
  font-family:Arial, sans-serif;
  background:#f4f6f9;
}

/* Header */
.header{
  background:linear-gradient(90deg,#c40000,#ff0000);
  color:white;
  padding:18px;
  text-align:center;
  font-size:22px;
  font-weight:bold;
}

/* Container */
.container{
  max-width:900px;
  margin:auto;
  padding:20px;
}

/* Card */
.card{
  background:white;
  padding:20px;
  border-radius:8px;
  box-shadow:0 3px 8px rgba(0,0,0,0.08);
  margin-bottom:25px;
}

/* Form Inputs */
input, textarea, select{
  width:100%;
  padding:10px;
  margin:8px 0;
  border-radius:6px;
  border:1px solid #ddd;
  font-size:14px;
}

textarea{
  min-height:100px;
  resize:vertical;
}

label{
  font-size:14px;
}

/* Button */
button{
  background:#c40000;
  color:white;
  border:none;
  padding:10px 18px;
  border-radius:6px;
  cursor:pointer;
  font-weight:bold;
  margin-top:10px;
}

button:hover{
  background:#a80000;
}

/* Posts List */
.post{
  border-bottom:1px solid #eee;
  padding:10px 0;
}

.post-title{
  font-weight:bold;
}

.delete{
  color:red;
  text-decoration:none;
  font-size:13px;
}

.delete:hover{
  text-decoration:underline;
}

@media(max-width:600px){
  .container{
    padding:10px;
  }
}
</style>
</head>

<body>

<div class="header">
Admin Panel - Jila Update
</div>

<div class="container">

<!-- ADD NEWS CARD -->
<div class="card">
<h3>Add News</h3>

<form action="/admin/add" method="POST">

<label>Title</label>
<input type="text" name="title" required>

<label>Content</label>
<textarea name="content" required></textarea>

<label>Category</label>
<select name="category" required>
  <option value="">Select Category</option>
  <option value="Local">Local</option>
  <option value="Sports">Sports</option>
  <option value="Business">Business</option>
  <option value="Politics">Politics</option>
</select>

<label>Location</label>
<input type="text" name="location">

<label>Image URL</label>
<input type="text" name="image">

<label>
<input type="checkbox" name="isBreaking">
 Breaking News
</label>

<br>

<button type="submit">Publish News</button>

</form>
</div>

<!-- ALL POSTS -->
<div class="card">
<h3>All Posts</h3>

<% allNews.forEach(item => { %>

<div class="post">
<div class="post-title">
<%= item.title %>
</div>

Category: <%= item.category %> |
Date: <%= new Date(item.createdAt).toLocaleDateString("en-IN") %>

<br><br>

<form method="POST" action="/admin/delete/<%= item._id %>" style="display:inline;">
  <button class="delete" 
          onclick="return confirm('Delete this post?')">
    Delete
  </button>
</form>

</div>

<% }) %>

</div>

</div>

</body>
</html>