<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
body{
  margin:0;
  font-family:Arial, sans-serif;
  background:#f4f4f4;
}

/* HEADER */
header{
  background:#c40000;
  color:white;
  text-align:center;
  padding:15px;
}

header h1{
  margin:0;
  font-size:28px;
}

.tagline{
  font-size:14px;
  margin-top:5px;
  color:#ffd700;
}

/* BREAKING BAR */
.breaking-bar{
  background:black;
  color:white;
  padding:8px 0;
  overflow:hidden;
  position:relative;
  white-space:nowrap;
}

.breaking-label{
  background:red;
  padding:6px 10px;
  font-weight:bold;
  animation:blink 1s infinite;
  margin-right:15px;
}

@keyframes blink{
  0%{opacity:1;}
  50%{opacity:0;}
  100%{opacity:1;}
}

.breaking-scroll{
  display:inline-block;
  animation:scrollLeft 15s linear infinite;
}

@keyframes scrollLeft{
  0%{transform:translateX(100%);}
  100%{transform:translateX(-100%);}
}

.breaking-scroll a{
  color:white;
  margin-right:40px;
  text-decoration:none;
}

/* SECTION */
.section{
  padding:15px;
}

.section h2{
  border-bottom:2px solid #c40000;
  color:#c40000;
}

.card{
  background:white;
  padding:10px;
  margin:10px 0;
  border-radius:6px;
  box-shadow:0 2px 6px rgba(0,0,0,0.1);
}

.card a{
  text-decoration:none;
  color:black;
}

.top-news{
  background:#fff8dc;
}
</style>
</head>

<body>

<header>
  <h1>‡§ï‡§ø‡§†‡§æ‡§®‡§æ ‡§®‡•ç‡§Ø‡•Ç‡§ú</h1>
  <div class="tagline">‡§∏‡§ö ‡§ï‡•Ä ‡§Ü‡§µ‡§æ‡§ú‡§º, ‡§Ü‡§™‡§ï‡•á ‡§∏‡§æ‡§•</div>
</header>

<!-- BREAKING NEWS BAR -->
<div class="breaking-bar">
  <span class="breaking-label">üî¥ BREAKING</span>

  <div class="breaking-scroll">
    <% breakingNews.forEach(item => { %>
      <a href="/news/<%= item._id %>">
        <%= item.title %>
      </a>
    <% }) %>
  </div>
</div>

<!-- TOP NEWS SECTION -->
<div class="section top-news">
  <h2>üî• TOP NEWS</h2>

  <% topNews.forEach(item => { %>
    <div class="card">
      <a href="/news/<%= item._id %>">
        <h3><%= item.title %></h3>
