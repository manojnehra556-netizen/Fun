<style>

body{
  margin:0;
  font-family: Arial, sans-serif;
  background:#f4f4f4;
}

/* HEADER */
.header{
  background: linear-gradient(90deg,#c40000,#ff0000);
  color:white;
  text-align:center;
  padding:20px;
}
.header h1{
  margin:0;
}
.tagline{
  font-size:14px;
}

/* DATE BAR */
.top-bar{
  display:flex;
  justify-content:space-between;
  padding:8px 15px;
  background:#000;
  color:#fff;
  font-size:14px;
}

/* BREAKING TICKER */
.breaking{
  display:flex;
  background:#111;
  color:white;
  align-items:center;
  overflow:hidden;
}
.breaking-label{
  background:red;
  padding:8px 12px;
  font-weight:bold;
}
.breaking-text{
  white-space:nowrap;
  display:inline-block;
  padding-left:100%;
  animation: scroll 15s linear infinite;
}
@keyframes scroll{
  0%{transform:translateX(0);}
  100%{transform:translateX(-100%);}
}

/* CATEGORY BAR */
.categories{
  display:flex;
  justify-content:center;
  gap:15px;
  background:#fff;
  padding:10px;
  border-bottom:1px solid #ddd;
}
.categories a{
  text-decoration:none;
  color:#c40000;
  font-weight:bold;
}

/* BREAKING HERO */
.hero{
  background:white;
  margin:15px;
  padding:15px;
  border-radius:6px;
  box-shadow:0 0 8px rgba(0,0,0,0.1);
}

.hero img{
  width:100%;
  border-radius:5px;
  margin-bottom:10px;
}

.hero h2{
  font-size:20px;
  margin-bottom:10px;
}

.hero p{
  color:#555;
}

.read-btn{
  display:inline-block;
  margin-top:10px;
  background:red;
  color:white;
  padding:8px 14px;
  text-decoration:none;
  border-radius:4px;
}

@media(max-width:600px){
  .hero h2{
    font-size:18px;
  }
}

</style>
</head>

<body>

<div class="header">
  <h1>‡§ú‡§ø‡§≤‡§æ ‡§Ö‡§™‡§°‡•á‡§ü</h1>
  <div class="tagline">‡§Ü‡§™‡§ï‡•á ‡§ú‡§ø‡§≤‡•á ‡§ï‡•Ä ‡§π‡§∞ ‡§ñ‡§¨‡§∞, ‡§∏‡§¨‡§∏‡•á ‡§™‡§π‡§≤‡•á</div>
</div>

<!-- DATE & TIME -->
<div class="top-bar">
  <div id="currentDate"></div>
  <div id="liveClock"></div>
</div>

<!-- BREAKING TICKER -->
<div class="breaking">
  <div class="breaking-label">BREAKING</div>
  <div class="breaking-text">
    <% if(tickerNews && tickerNews.length > 0){ %>
      <% tickerNews.forEach(item => { %>
        <span><%= item.title %> &nbsp;&nbsp;&nbsp;</span>
      <% }) %>
    <% } %>
  </div>
</div>

<!-- CATEGORY BAR -->
<div class="categories">
  <a href="/category/Local">Local</a>
  <a href="/category/Sports">Sports</a>
  <a href="/category/Business">Business</a>
  <a href="/category/Politics">Politics</a>
</div>

<!-- BREAKING HERO SECTION -->
<% if(breakingNews){ %>
<div class="hero">
  
  <% if(breakingNews.image){ %>
    <img src="<%= breakingNews.image %>">
  <% } %>

  <h2><%= breakingNews.title %></h2>

  <p>
    üìÖ <%= new Date(breakingNews.createdAt).toLocaleDateString("en-IN") %>
    |
    ‚è∞ <%= new Date(breakingNews.createdAt).toLocaleTimeString("en-IN") %>
  </p>

  <p><%= breakingNews.content.substring(0,200) %>...</p>

  <a href="/news/<%= breakingNews._id %>" class="read-btn">
    Read Full News ‚Üí
  </a>

</div>
<% } %>

<script>
function updateClock(){
  const now = new Date();
  document.getElementById("currentDate").innerHTML =
    "üìÖ " + now.toLocaleDateString("en-IN");
  document.getElementById("liveClock").innerHTML =
    "‚è∞ " + now.toLocaleTimeString("en-IN");
}
setInterval(updateClock,1000);
updateClock();
</script>

</body>
</html>