<style>
*{margin:0;padding:0;box-sizing:border-box;}

body{
  font-family:Arial, sans-serif;
  background:#f5f5f5;
}

/* HEADER */
.header{
  background:linear-gradient(90deg,#c40000,#ff0000);
  color:white;
  text-align:center;
  padding:18px;
}
.header h1{font-size:26px;}
.tagline{font-size:13px;}

/* DATE + TIME (SAME LINE CENTER) */
.top-bar{
  background:#111;
  color:white;
  text-align:center;
  padding:8px 10px;
  font-size:14px;
  font-weight:500;
}

/* BREAKING (SAME LINE SCROLL) */
.breaking{
  display:flex;
  align-items:center;
  background:black;
  color:white;
  overflow:hidden;
  padding:6px 10px;
}

.breaking-label{
  background:red;
  padding:6px 10px;
  font-weight:bold;
  margin-right:10px;
  white-space:nowrap;
}

.breaking-text{
  white-space:nowrap;
  display:inline-block;
  animation:scroll 20s linear infinite;
}

@keyframes scroll{
  0%{ transform: translateX(100%); }
  100%{ transform: translateX(-100%); }
}

/* NAV */
.nav{
  display:flex;
  justify-content:center;
  gap:20px;
  padding:12px;
  background:white;
  border-bottom:1px solid #ddd;
}
.nav a{
  text-decoration:none;
  color:#c40000;
  font-weight:bold;
  font-size:14px;
}

/* SECTION */
.section{
  padding:15px;
}

.section h2{
  border-left:4px solid red;
  padding-left:10px;
  margin-bottom:10px;
}

/* CARD */
.card{
  background:white;
  padding:15px;
  margin:12px 0;
  border-radius:8px;
  box-shadow:0 3px 8px rgba(0,0,0,0.08);
}

.card a{
  text-decoration:none;
  font-weight:bold;
  font-size:16px;
  color:black;
}

.meta{
  font-size:12px;
  color:#666;
  margin-top:5px;
}

/* LIVE BADGE */
.live{
  background:red;
  color:white;
  font-size:10px;
  padding:3px 6px;
  border-radius:20px;
  margin-left:6px;
  animation:blink 1s infinite;
}

@keyframes blink{
  0%{opacity:1;}
  50%{opacity:0.3;}
  100%{opacity:1;}
}

/* MOBILE */
@media(max-width:768px){
  .nav{
    flex-wrap:wrap;
    gap:10px;
  }
}
</style>
</head>

<body>

<!-- HEADER -->
