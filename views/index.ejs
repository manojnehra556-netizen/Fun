<style>
body{
  margin:0;
  font-family:Arial, sans-serif;
  background:#f4f4f4;
}

/* HEADER */
.header{
  background:linear-gradient(90deg,#c40000,#ff0000);
  color:white;
  text-align:center;
  padding:20px;
}
.header h1{ margin:0; }
.tagline{ font-size:14px; }

/* TOP DATE BAR */
.top-bar{
  display:flex;
  justify-content:space-between;
  align-items:center;
  background:#111;
  color:#fff;
  padding:8px 15px;
  font-size:14px;
}

/* MOBILE VERSION */
@media(max-width:600px){
  .top-bar{
    flex-direction:column;
    text-align:center;
    gap:4px;
  }
}

/* BREAKING */
.breaking{
  display:flex;
  background:black;
  color:white;
  overflow:hidden;
}
.breaking-label{
  background:red;
  padding:8px 12px;
  font-weight:bold;
}
.breaking-text{
  white-space:nowrap;
  padding-left:100%;
  animation:scroll 15s linear infinite;
}
@keyframes scroll{
  0%{ transform:translateX(0); }
  100%{ transform:translateX(-100%); }
}

/* NAV */
.nav{
  display:flex;
  justify-content:center;
  gap:25px;
  padding:12px;
  background:white;
  border-bottom:1px solid #ddd;
}
.nav a{
  text-decoration:none;
  color:#c40000;
  font-weight:bold;
}

/* SECTION */
.section{
  padding:15px;
}
.section h2{
  border-left:4px solid red;
  padding-left:10px;
}

/* CARD */
.card{
  background:white;
  padding:12px;
  margin:10px 0;
  border-radius:6px;
  box-shadow:0 2px 5px rgba(0,0,0,0.1);
}
.card a{
  text-decoration:none;
  color:black;
  font-weight:bold;
}
.meta{
  font-size:12px;
  color:#555;
  margin-top:5px;
}

/* LIVE BADGE */
.live{
  background:red;
  color:white;
  font-size:10px;
  padding:3px 6px;
  border-radius:20px;
  margin-left:6px;
  animation:blink 1s infinite;
}
@keyframes blink{
  0%{ opacity:1;}
  50%{ opacity:0.3;}
  100%{ opacity:1;}
}
</style>
</head>

