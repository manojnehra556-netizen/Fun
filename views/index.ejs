<style>
body{
  margin:0;
  font-family:Arial, sans-serif;
  background:#f4f4f4;
}

/* HEADER */
header{
  background:#c40000;
  color:white;
  text-align:center;
  padding:20px;
}

header h1{
  margin:0;
  font-size:32px;
}

.tagline{
  color:#ffd700;
  margin-top:5px;
  font-size:15px;
}

/* BREAKING BAR */
.breaking-bar{
  background:black;
  color:white;
  padding:8px;
  overflow:hidden;
  white-space:nowrap;
}

.breaking-label{
  background:red;
  padding:4px 8px;
  font-weight:bold;
  animation:blink 1s infinite;
}

@keyframes blink{
  50%{opacity:0}
}

.breaking-scroll{
  display:inline-block;
  animation:scroll 18s linear infinite;
}

@keyframes scroll{
  0%{transform:translateX(100%)}
  100%{transform:translateX(-100%)}
}

.breaking-scroll a{
  color:white;
  margin-right:40px;
  text-decoration:none;
  font-weight:bold;
}

/* CATEGORY BAR IMPROVED */
.category-bar{
  background:#ffffff;
  border-bottom:3px solid #c40000;
  overflow-x:auto;
  white-space:nowrap;
  padding:12px 0;
  scrollbar-width:none;
}

.category-bar::-webkit-scrollbar{
  display:none;
}

.category-bar a{
  display:inline-block;
  margin:0 15px;
  text-decoration:none;
  font-weight:bold;
  font-size:18px;
  color:#c40000;
  padding:6px 10px;
  transition:0.3s;
}

.category-bar a:hover{
  background:#c40000;
  color:white;
  border-radius:5px;
}

/* SECTION */
.section{
  padding:15px;
}

.section h2{
  color:#c40000;
  border-bottom:2px solid #c40000;
  padding-bottom:5px;
}

.card{
  background:white;
  padding:12px;
  margin:12px 0;
  border-radius:6px;
  box-shadow:0 2px 8px rgba(0,0,0,0.1);
}

.card a{
  text-decoration:none;
  color:black;
}

.card h3{
  margin:0;
  font-size:18px;
}

.read-more{
  color:red;
  font-weight:bold;
  text-decoration:none;
  display:inline-block;
  margin-top:5px;
}

@media(max-width:600px){
  header h1{font-size:26px;}
  .category-bar a{font-size:16px;}
}
</style>
</head>

